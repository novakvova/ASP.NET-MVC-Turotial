<!DOCTYPE html>
<html>
<head>
    <title>Admin @ViewBag.Title</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>

<body>
    <header class="myheader col-12 col-m-12">
        <div id="headerName">
            Administrator
        </div>

        <div id="adminNav">
            <ul>
                <li><a href="">Setting</a></li>
                <li><a href="">Profile</a></li>
                <li><a href="">Logout</a></li>
            </ul>
        </div>
        <div id="menuIcon">
            <i id="clickIcon" class="fa fa-bars" aria-hidden="true"></i>
        </div>

    </header>


    <div id="row" class="row">
        <div class="col-2 col-m-3 leftpanel">
            <div class="content">
                <ul class="sidemenu">
                    <li>
                        <a class="menulinks @((ViewBag.MenuCountry!=null) ? "active":"")" 
                           href="@Url.Action("Index","Country")">Country</a>
                    </li>
                    <li>
                        <a class="menulinks @((ViewBag.MenuCity!=null) ? "active":"")" 
                           href="@Url.Action("Index","City")">City</a>
                    </li>
                    
                </ul>
            </div>

        </div>

        <div class="col-10 col-m-12 dataBody" id="dataBody">
            @RenderBody()
        </div>
    </div>

    <footer class="col-12 col-m-12"></footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/Scripts/custom/leftMainMenu.js"></script>
    <script src="~/Scripts/custom/dropListSearchCountry.js"></script>
    <script src="~/Scripts/custom/dropListSearchTown.js"></script>
    <script src="~/Scripts/custom/dropListSearchHotel.js"></script>
    <script src="~/Scripts/custom/myJs.js"></script>

</body>
</html>
